<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="MailNotifyConfig" type="TFSWIWatcher.BL.Configuration.MailNotifyConfigurationSectionHandler, TFSWIWatcher.BL" />
		<section name="TFSObserverAccountConfig" type="TFSWIWatcher.BL.Configuration.TFSObserverAccountConfigurationSectionHandler, TFSWIWatcher.BL" />
		<section name="ConfigCredentialsConfig" type="TFSWIWatcher.BL.Configuration.ConfigCredentialsConfigurationSectionHandler, TFSWIWatcher.BL" />

		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
		<section name="ConfigSettings" type=" TFSWIWatcher.BL.Configuration.ConfigSettingsConfigurationSection, TFSWIWatcher.BL"/>
	</configSections>

	<ConfigSettings isDev="true" teamServer="http://yourteamserver:8080" localServicePort="50782">
		<NotifyProviders>
			<Provider assemblyName="TFSWIWatcher.BL" providerClass="TFSWIWatcher.BL.Providers.MailNotifyProvider" enabled="true"/>
		</NotifyProviders>

		<ObserverAccountProvider assemblyName="TFSWIWatcher.BL" providerClass="TFSWIWatcher.BL.Providers.TFSObserverAccountProvider"  />
		<CredentialsProvider assemblyName="TFSWIWatcher.BL" providerClass="TFSWIWatcher.BL.Providers.ConfigCredentialsProvider"  />
		<!--<CredentialsProvider assemblyName="Microsoft.TeamFoundation.Client, Version=9.0.0.0, Culture=neutral, PublicKeyToken=b03f5f7f11d50a3a" providerClass="Microsoft.TeamFoundation.Client.UICredentialsProvider"  />-->
	</ConfigSettings>
	
	<MailNotifyConfig>
		<MailTransformationFile>WorkItemChangedEvent.xsl</MailTransformationFile>
		<DevMail>YourDevMailAccount@YourDomain.de</DevMail>
	</MailNotifyConfig>

	<TFSObserverAccountConfig>
		<RegexPattern>^(?&lt;user&gt;.+)$</RegexPattern>
		<ObserversFieldName>DNE.Observers</ObserversFieldName>
		<RegexOptions>Compiled | Multiline | IgnoreCase</RegexOptions>
	</TFSObserverAccountConfig>

	<ConfigCredentialsConfig>
		<Username>tfssetup</Username>
		<Password>P2ssw0rd</Password>
		<Domain></Domain>
	</ConfigCredentialsConfig>

	<log4net>
		<appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
			<file value="log.txt" />
			<appendToFile value="true" />
			<maximumFileSize value="1MB" />
			<rollingStyle value="Size" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<header value="[Header]&#13;&#10;" />
				<footer value="[Footer]&#13;&#10;" />
				<conversionPattern value="%date [%thread] %-5level %logger [%ndc] - %message%newline" />
			</layout>
		</appender>

		<root>
			<level value="DEBUG" />
			<appender-ref ref="RollingLogFileAppender" />
		</root>
	</log4net>

	<system.net>
		<mailSettings>
			<smtp deliveryMethod="Network" from="TFSWIWatcher@YourDomain">
				<network host="YourMailServer" port="25" />
			</smtp>
		</mailSettings>
	</system.net>
</configuration>